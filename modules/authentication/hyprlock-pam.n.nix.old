{
  config,
  pkgs,
  lib,
  ...
}: {
  security.pam.services.hyprlock = {
    text = ''
      auth       optional                    pam_env.so
      auth       sufficient                  ${pkgs.fprintd}/lib/security/pam_fprintd.so max_tries=3 timeout=5
      auth       sufficient                  ${pkgs.linux-pam}/lib/security/pam_unix.so nullok
      auth       required                    pam_deny.so

      account    include                     login

      password   sufficient                  ${pkgs.linux-pam}/lib/security/pam_unix.so nullok

      session    include                     login
    '';
  };
}
